<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OctomatePrototype" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
    </style>

    <style name="DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="MenuItem">
        <item name="fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarMonth" parent="Theme.OctomatePrototype">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:colorControlActivated">#C8EBE8</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="CalendarWeek">
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/nunitosans_regular</item>
    </style>

    <style name="CalendarDay">
        <item name="android:textColor">#8B8B8B</item>
        <item name="fontFamily">@font/nunitosans_regular</item>
    </style>
    
    <style name="TextInputEditText">
        <item name="android:colorControlNormal">@color/white</item>
    </style>

</resources>